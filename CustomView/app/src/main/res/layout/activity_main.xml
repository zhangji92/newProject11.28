<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bnt_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bnt"/>

    <Button
        android:id="@+id/bnt_intent"
        android:layout_below="@id/bnt_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intent"/>

    <Button
        android:id="@+id/bnt_click2"
        android:layout_toEndOf="@id/bnt_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bnt2"/>
    <Button
        android:id="@+id/bnt_click3"
        android:layout_toEndOf="@id/bnt_click2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bnt3"/>

    <com.app.view.MyImageView
        android:id="@+id/img"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img"/>
</RelativeLayout>
