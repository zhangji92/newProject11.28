<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/user_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textView_user"
        android:background="@color/back_all" />

    <TextView
        android:id="@+id/textView_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_edit"
        android:text="@string/pass"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pad_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_edit"
        android:layout_toEndOf="@id/textView_pad"
        android:background="@color/back_all" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_below="@id/pad_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/box"/>

    <Button
        android:id="@+id/bnt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_box"
        android:text="@string/login" />
</RelativeLayout>
