<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/loan_color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/loan_dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loan_30dip"
        android:text="确定要删除这张银行卡吗？"
        android:textColor="@color/loan_text_color_black"
        android:textSize="@dimen/loan_textsize_18sp" />

    <RelativeLayout
        android:id="@+id/loan_dialog_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loan_10dip"
        android:background="@drawable/loan_white_to_gray_selector"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/loan_15dip"
        android:paddingRight="@dimen/loan_15dip">

        <ImageView
            android:id="@+id/loan_dialog_card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/loan_zhaoshang_small" />

        <TextView
            android:id="@+id/loan_dialog_card_numtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/loan_15dip"
            android:layout_marginStart="@dimen/loan_15dip"
            android:layout_toEndOf="@+id/loan_dialog_card_image"
            android:layout_toRightOf="@+id/loan_dialog_card_image"
            android:text="4376********234"
            android:textColor="@color/loan_text_color"
            android:textSize="@dimen/loan_textsize_14sp" />
    </RelativeLayout>

    <View
        style="@style/loan_verticalline_style"
        android:layout_marginTop="@dimen/loan_20dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/loan_dialog_leftBtn"
            style="@style/loan_dialog_left_btn_style"
            android:text="@string/loan_recharge" />

        <Button
            android:id="@+id/loan_dialog_rightBtn"
            style="@style/loan_dialog_right_btn_style"
            android:text="@string/loan_recharge" />
    </LinearLayout>

</LinearLayout>