<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loan_dialog_bg_round_corner_shape"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/loan_10dip"
        android:text="温馨提示"
        android:textColor="#333333"
        android:textSize="@dimen/loan_textsize_20sp" />

    <TextView
        android:id="@+id/content"
        style="@style/loan_dialog_msg_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/loan_10dip"
        android:layout_marginTop="@dimen/loan_10dip"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:padding="@dimen/loan_10dip"
        android:text="余额不足！请充值后再投资" />

    <View style="@style/loan_verticalline_style" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dip" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:background="@color/loan_tab_background_normal"
            android:text="暂不充值" />

        <View style="@style/loan_horizontalline_style" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@color/loan_tab_background_normal"
            android:text="现在就去" />
    </LinearLayout>

</LinearLayout>