<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_color_white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/loan_color_black"
        android:layout_margin="@dimen/loan_15dip"
        android:textSize="@dimen/loan_textsize_18sp"
        android:text="确认实名信息" />

    <TextView
        android:id="@+id/loan_IDCardInfo_nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loan_40dip"
        android:textColor="@color/loan_current_text_color_black"
        android:textSize="@dimen/loan_textsize_16sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/loan_IDCardInfo_idnumTV"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loan_5dip"
        android:layout_marginLeft="@dimen/loan_40dip"
        android:textColor="@color/loan_current_text_color_black"
        android:textSize="@dimen/loan_textsize_16sp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/loan_IDCardInfo_cancelBtn"
            style="@style/loan_dialog_left_btn_style"
            android:text="返回修改" />

        <Button
            android:id="@+id/loan_IDCardInfo_enterBtn"
            style="@style/loan_dialog_right_btn_style"
            android:text="@string/loan_base_enter" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loan_30dip"
        android:layout_marginRight="@dimen/loan_30dip"
        android:layout_marginBottom="@dimen/loan_15dip"
         android:textColor="@color/loan_current_text_color_blue"
        android:textSize="@dimen/loan_textsize_12sp"
        android:text="实名信息确认后将无法修改，请再次核对信息是否正确" />

</LinearLayout>
