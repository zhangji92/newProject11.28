<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loan_menu_item_selector"
    android:paddingBottom="@dimen/loan_10dip"
    android:paddingTop="@dimen/loan_10dip">

    <TextView
        android:id="@+id/loan_repaymentDate"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loan_10dip"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="2015-08-25"
        android:textColor="#555656"
        android:textSize="@dimen/loan_textsize_14sp" />

    <TextView
        android:id="@+id/loan_type"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="利息"
        android:textColor="#555656"
        android:textSize="@dimen/loan_textsize_14sp" />

    <TextView
        android:id="@+id/loan_money"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="4500"
        android:textColor="#555656"
        android:textSize="@dimen/loan_textsize_14sp" />

    <TextView
        android:id="@+id/loan_status"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/loan_10dip"
        android:layout_weight="1"
        android:gravity="right"
        android:singleLine="true"
        android:text="等待还款"
        android:textColor="#555656"
        android:textSize="@dimen/loan_textsize_14sp" />

</LinearLayout>