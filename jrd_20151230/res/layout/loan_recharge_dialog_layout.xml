<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loan_dialog_bg_round_corner_shape"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/loan_10dip"
        android:text="@string/loan_TieCardRecognition"
        android:textColor="#333333"
        android:textSize="@dimen/loan_textsize_20sp" />

    <TextView
        android:id="@+id/loan_cardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loan_10dip"
        android:layout_marginRight="@dimen/loan_10dip"
        android:layout_marginTop="@dimen/loan_10dip"
        android:textColor="@color/loan_current_text_color_black"
        android:textSize="@dimen/loan_textsize_16sp" />

    <TextView
        android:id="@+id/loan_cardNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loan_10dip"
        android:layout_marginRight="@dimen/loan_10dip"
        android:layout_marginTop="@dimen/loan_5dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/loan_current_text_color_black"
        android:textSize="@dimen/loan_textsize_16sp" />

    <TextView
        android:id="@+id/loan_CardInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loan_10dip"
        android:layout_marginRight="@dimen/loan_10dip"
        android:layout_marginTop="@dimen/loan_20dip"
        android:textColor="@color/loan_current_text_color_orange"
        android:textSize="@dimen/loan_textsize_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCancel"
            style="@style/loan_dialog_left_btn_style"
            android:text="@string/loan_return_correction" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/loan_dialog_right_btn_style"
            android:text="@string/loan_I_have_confirmed" />
    </LinearLayout>

</LinearLayout>