<?xml version="1.0" encoding="utf-8"?>
<com.jrd.loan.widget.WindowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_divider_line_color"
    android:orientation="vertical">

    <View
        style="@style/loan_verticalline_style"
        android:layout_marginTop="@dimen/loan_10dip" />

    <LinearLayout
        android:id="@+id/loan_personal_cu_loinpswlin"
        style="@style/loan_input_layout_style"
        android:background="@color/loan_color_white"
        android:orientation="horizontal">

        <ImageView
            style="@style/loan_editable_right_style"
            android:background="@drawable/loan_account_icon" />

        <EditText
            android:id="@+id/loan_personal_cu_loinpsw_accountedi"
            style="@style/loan_editable_hint_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/loan_account_regist_inputtelnumtips"
            android:paddingTop="@dimen/loan_10dip"
            android:paddingBottom="@dimen/loan_10dip" />
    </LinearLayout>

    <View style="@style/loan_horizontallinewithmargin_style" />

    <RelativeLayout
        android:id="@+id/loan_personal_cu_loinpsw_vcodelin"
        style="@style/loan_input_layout_style"
        android:background="@color/loan_color_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/loan_account_login_vcode_tv"
            style="@style/loan_editable_right_style"
            android:background="@drawable/loan_verify"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dip" />

        <EditText
            android:id="@+id/loan_personal_cu_loinpsw_vcodeedi"
            style="@style/loan_editable_hint_style"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="@string/loan_account_login_smstips"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/loan_25dip"
            android:layout_toRightOf="@id/loan_account_login_vcode_tv"
            android:paddingTop="@dimen/loan_10dip"
            android:paddingBottom="@dimen/loan_10dip" />

        <View
            style="@style/loan_horizontalline_style"
            android:layout_toLeftOf="@+id/loan_personal_cu_loinpsw_sendvcode_btn" />

        <Button
            android:id="@+id/loan_personal_cu_loinpsw_sendvcode_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/loan_title_bar_textColor"
            android:hint="@string/loan_account_login_getCode"
            android:background="@null"
            android:layout_marginLeft="@dimen/loan_20dip"
            android:layout_marginRight="@dimen/loan_20dip" />
    </RelativeLayout>

    <View style="@style/loan_horizontallinewithmargin_style" />

    <LinearLayout
        style="@style/loan_input_layout_style"
        android:background="@color/loan_color_white"
        android:orientation="horizontal">

        <ImageView
            style="@style/loan_editable_right_style"
            android:background="@drawable/loan_personal_loginpsw_icon"
            android:layout_marginLeft="11dip"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/loan_personal_cu_loinpsw_edi"
            style="@style/loan_editable_hint_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="32"
            android:hint="@string/loan_account_personal_change_psw_input"
            android:paddingTop="@dimen/loan_10dip"
            android:paddingBottom="@dimen/loan_10dip" />
    </LinearLayout>

    <View style="@style/loan_horizontallinewithmargin_style" />

    <LinearLayout
        style="@style/loan_input_layout_style"
        android:background="@color/loan_color_white"
        android:orientation="horizontal">

        <ImageView
            style="@style/loan_editable_right_style"
            android:background="@drawable/loan_personal_loginpsw_icon"
            android:layout_marginLeft="11dip"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/loan_personal_cu_loinpsw_repeatedi"
            style="@style/loan_editable_hint_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="32"
            android:hint="@string/loan_account_personal_change_psw_repeat"
            android:paddingTop="@dimen/loan_10dip"
            android:paddingBottom="@dimen/loan_10dip" />
    </LinearLayout>

    <Button
        android:id="@+id/loan_personal_cu_loinpsw_enterbtn"
        style="@style/loan_next_click_btn_style"
        android:layout_centerVertical="true"
        android:text="@string/loan_account_login_resetpsw" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/loan_40dip"
        android:gravity="bottom">

        <TextView
            android:id="@+id/loan_personal_cu_loinpsw_tv"
            style="@style/loan_click_tv_style"
            android:textColor="@color/loan_color_transtips_gray"
            android:textSize="@dimen/loan_textsize_14sp"
            android:hint="@string/loan_contactcustomerservice_tips"
            android:gravity="center"
            android:layout_marginBottom="@dimen/loan_5dip" />

        <TextView
            android:id="@+id/loan_personal_cu_loinpsw_callandtips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/loan_customerservice_tips_callandtime"
            android:textColor="@color/loan_title_bar_textColor"
            android:textSize="@dimen/loan_textsize_16sp"
            android:layout_marginBottom="@dimen/loan_5dip"
            android:layout_below="@id/loan_personal_cu_loinpsw_tv"
            android:drawableLeft="@drawable/loan_account_callandtime_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loan_personal_cu_loinpsw_callandtips_tv"
            android:layout_marginBottom="@dimen/loan_40dip"
            android:gravity="center">

            <TextView
                android:id="@+id/loan_personal_cu_loinpsw_tips_tv"
                android:text="@string/loan_customerservice_modify_logonpasswd_tips_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/loan_5dip"
                android:layout_marginStart="@dimen/loan_5dip"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="12sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/loan_account_customerservice_callandtime_tv"
                android:text="@string/loan_customerservice_modify_logonpasswd_weeken_tips_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_12sp" />
        </LinearLayout>
    </RelativeLayout>
</com.jrd.loan.widget.WindowView>