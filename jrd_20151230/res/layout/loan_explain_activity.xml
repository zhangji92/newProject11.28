<com.jrd.loan.widget.WindowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/loan_20dip"
            android:layout_marginTop="@dimen/loan_20dip">

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tip_ftv"
                style="@style/loan_click_tv_style"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginRight="0dip"
                android:gravity="left"
                android:text="@string/loan_tips_num_f"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tips_ftv"
                style="@style/loan_click_tv_style"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginLeft="0dip"
                android:layout_toRightOf="@id/loan_account_change_transactionpsw_tip_ftv"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="快捷卡是移动端充值、提现的唯一支付途径；"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tip_stv"
                style="@style/loan_click_tv_style"
                android:layout_width="wrap_content"
                android:layout_below="@id/loan_account_change_transactionpsw_tips_ftv"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginRight="0dip"
                android:gravity="left"
                android:text="@string/loan_tips_num_s"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tips_stv"
                style="@style/loan_click_tv_style"
                android:layout_below="@id/loan_account_change_transactionpsw_tips_ftv"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginLeft="0dip"
                android:layout_toRightOf="@id/loan_account_change_transactionpsw_tip_stv"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="每个账号只可将一张银行卡绑定为快捷卡，请选择常用银行卡进行绑定。绑定后，提现只能提至快捷卡，同卡进出；"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tip_ttv"
                style="@style/loan_click_tv_style"
                android:layout_width="wrap_content"
                android:layout_below="@id/loan_account_change_transactionpsw_tips_stv"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginRight="0dip"
                android:gravity="left"
                android:text="3."
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tips_ttv"
                style="@style/loan_click_tv_style"
                android:layout_below="@id/loan_account_change_transactionpsw_tips_stv"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginLeft="0dip"
                android:layout_toRightOf="@id/loan_account_change_transactionpsw_tip_ttv"
                android:gravity="left"
                android:text="此快捷卡绑定成功后将同步到电脑端的提现，其它已绑定的提现银行卡将自动失效；"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tip_ttvv"
                style="@style/loan_click_tv_style"
                android:layout_width="wrap_content"
                android:layout_below="@id/loan_account_change_transactionpsw_tips_ttv"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginRight="0dip"
                android:gravity="left"
                android:text="4."
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />

            <TextView
                android:id="@+id/loan_account_change_transactionpsw_tips_ttvv"
                style="@style/loan_click_tv_style"
                android:layout_below="@id/loan_account_change_transactionpsw_tips_ttv"
                android:layout_marginBottom="@dimen/loan_5dip"
                android:layout_marginLeft="0dip"
                android:layout_toRightOf="@id/loan_account_change_transactionpsw_tip_ttvv"
                android:gravity="left"
                android:text="为保障您的账户资金安全，如需更换或解绑快捷卡，请联系君融贷客服（电话：4000-655-677）并提供以下资料：姓名与身份证号码；手持身份证半身照一张（照片面部及身份证号码须清晰可见）；原绑定银行卡号；注册手机号。客服确认信息及身份后，解除绑定，您可再次绑定新的快捷卡。"
                android:textColor="@color/loan_title_bar_textColor"
                android:textSize="@dimen/loan_textsize_14sp" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/loan_explain_agreementLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/loan_10dip"
            android:layout_marginStart="@dimen/loan_10dip">

            <ImageView
                android:id="@+id/loan_explain_agreementImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/loan_2dip"
                android:layout_marginLeft="@dimen/loan_10dip"
                android:layout_marginRight="@dimen/loan_10dip"
                android:background="@drawable/loan_check_bg_selector"
                android:contentDescription="@null" />
        </LinearLayout>

        <TextView
            android:id="@+id/loan_explain_agreementTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/loan_10dip"
            android:text="我已认真阅读上述说明，并同意君融贷《服务协议及风险提示》"
            android:textColor="@color/loan_current_text_color_black"
            android:textSize="@dimen/loan_textsize_12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/loan_explain_nextBtn"
        style="@style/loan_next_click_btn_style"
        android:layout_marginBottom="@dimen/loan_20dip"
        android:text="下一步" />

</com.jrd.loan.widget.WindowView>