<?xml version="1.0" encoding="utf-8"?>
<com.jrd.loan.widget.WindowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jrd.loan.widget.LoanRefreshScrollView
        android:id="@+id/loan_recharge_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/loan_recharge_bg_color">

                <ImageView
                    android:id="@+id/chongzhitubiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/loan_30dip"
                    android:src="@drawable/loan_touzijilu_icon" />

                <TextView
                    android:id="@+id/zhanghuyue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/loan_30dip"
                    android:layout_toEndOf="@+id/chongzhitubiao"
                    android:layout_toRightOf="@+id/chongzhitubiao"
                    android:text="@string/loan_my_account_balance"
                    android:textColor="@color/loan_color_white"
                    android:textSize="@dimen/loan_textsize_16sp" />

                <TextView
                    android:id="@+id/loan_recharge_balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/zhanghuyue"
                    android:layout_alignStart="@+id/zhanghuyue"
                    android:layout_below="@+id/zhanghuyue"
                    android:text="0"
                    android:textColor="@color/loan_color_white"
                    android:textSize="@dimen/loan_textsize_30sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/loan_recharge_Edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loan_edittext_height"
                android:layout_marginLeft="@dimen/loan_15dip"
                android:layout_marginRight="@dimen/loan_15dip"
                android:layout_marginTop="@dimen/loan_25dip"
                android:background="@drawable/loan_recharge_input_edit_shape"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:hint="@string/loan_recharge_edit_hint_text"
                android:textColor="@color/loan_color_black"
                android:textColorHint="@color/loan_edit_hint_text_color"
                android:textSize="@dimen/loan_edittext_textsize"></EditText>

            <Button
                android:id="@+id/loan_recharge_Btn"
                style="@style/loan_circular_enterbtn_style"
                android:text="@string/loan_promptly_recharge_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/loan_20dip"
                android:layout_marginRight="@dimen/loan_20dip"
                android:layout_marginTop="@dimen/loan_40dip"
                android:text="@string/loan_warm_prompt"
                android:textColor="@color/loan_warm_prompt_color"
                android:textSize="@dimen/loan_textsize_16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/loan_20dip"
                android:layout_marginRight="@dimen/loan_20dip"
                android:layout_marginTop="@dimen/loan_10dip">

                <TextView
                    android:id="@+id/textView1"
                    style="@style/loan_warm_prompt_text_style"
                    android:text="1." />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/loan_warm_prompt_text_style"
                    android:layout_marginBottom="@dimen/loan_20dip"
                    android:layout_toEndOf="@+id/textView1"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="用户充值过程全免费." />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/loan_warm_prompt_text_style"
                    android:layout_below="@+id/textView2"
                    android:text="2." />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/loan_warm_prompt_text_style"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginBottom="@dimen/loan_20dip"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/loan_recharge_hint_2" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/loan_warm_prompt_text_style"
                    android:layout_below="@+id/textView4"
                    android:text="3." />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/loan_warm_prompt_text_style"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_marginBottom="@dimen/loan_20dip"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/loan_recharge_hint_3" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/loan_warm_prompt_text_style"
                    android:layout_below="@+id/textView6"
                    android:text="4." />

                <TextView
                    android:id="@+id/textView8"
                    style="@style/loan_warm_prompt_text_style"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_toEndOf="@+id/textView7"
                    android:layout_toRightOf="@+id/textView7"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/loan_recharge_hint_4" />
            </RelativeLayout>
        </LinearLayout>
    </com.jrd.loan.widget.LoanRefreshScrollView>

</com.jrd.loan.widget.WindowView>