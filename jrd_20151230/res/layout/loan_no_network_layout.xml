<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loan_no_network_layoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:layout_marginTop="@dimen/loan_no_network_margin_top"
        android:src="@drawable/loan_no_network_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/loan_20dip"
        android:gravity="center"
        android:clickable="false"
        android:lineSpacingExtra="5dp"
        android:text="@string/loan_net_exp_tips"
        android:textColor="@color/loan_title_txt_color"
        android:textSize="@dimen/loan_textsize_16sp" />

</LinearLayout>