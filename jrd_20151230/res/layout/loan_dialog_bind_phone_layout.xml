<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/loan_10dip"
        android:layout_marginLeft="@dimen/loan_15dip"
        android:layout_marginStart="@dimen/loan_15dip"
        android:layout_marginTop="@dimen/loan_10dip"
        android:text="绑定手机号"
        android:textColor="@color/loan_text_color_black"
        android:textSize="@dimen/loan_textsize_18sp" />

    <View style="@style/loan_verticalline_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/loan_10dip"
        android:layout_marginLeft="@dimen/loan_15dip"
        android:layout_marginStart="@dimen/loan_15dip"
        android:layout_marginTop="@dimen/loan_10dip">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/loan_tag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码是您在君融贷重要的身份凭证，为保证您的信息安全，请立即绑定"
            android:textColor="@color/loan_text_color_black"
            android:textSize="@dimen/loan_textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/loan_10dip"
            android:layout_marginLeft="@dimen/loan_15dip"
            android:layout_marginStart="@dimen/loan_15dip"
            android:layout_marginTop="@dimen/loan_10dip"
            android:text="手机号"
            android:textColor="@color/loan_text_color_black"
            android:textSize="@dimen/loan_textsize_16sp" />

        <EditText
            android:id="@+id/loan_bind_phone_edit"
            style="@style/loan_input_edittext_style"
            android:layout_marginLeft="@dimen/loan_20dip"
            android:layout_marginStart="@dimen/loan_20dip"
            android:layout_weight="1"
            android:inputType="phone"
            android:maxLength="11"
            android:drawableLeft="@drawable/loan_phone"
            android:drawablePadding="@dimen/loan_5dip"
            android:drawableStart="@drawable/loan_phone"
            android:hint="请输入手机号"></EditText>
    </LinearLayout>

    <View style="@style/loan_verticalline_style" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/loan_10dip"
            android:layout_marginLeft="@dimen/loan_15dip"
            android:layout_marginStart="@dimen/loan_15dip"
            android:layout_marginTop="@dimen/loan_10dip"
            android:text="验证码"
            android:textColor="@color/loan_text_color_black"
            android:textSize="@dimen/loan_textsize_16sp" />

        <EditText
            android:id="@+id/loan_bind_verify_edit"
            style="@style/loan_input_edittext_style"
            android:layout_marginLeft="@dimen/loan_20dip"
            android:layout_marginStart="@dimen/loan_20dip"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/loan_verify"
            android:drawablePadding="@dimen/loan_5dip"
            android:drawableStart="@drawable/loan_verify"
            android:hint="请输入验证码"></EditText>

        <View style="@style/loan_horizontalline_style" />

        <Button
            android:id="@+id/loan_bind_getVerify_btn"
            android:layout_width="@dimen/loan_110dip"
            android:layout_height="match_parent"
            android:textColor="@color/loan_text_color_black"
            android:textSize="@dimen/loan_textsize_14sp"
            android:text="获取验证码"
            android:background="@drawable/loan_white_to_gray_selector" />
    </LinearLayout>

    <View style="@style/loan_verticalline_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/loan_bind_enterBtn"
            style="@style/loan_dialog_left_btn_style"
            android:text="确定" />

        <Button
            android:id="@+id/loan_bind_cancelBtn"
            style="@style/loan_dialog_right_btn_style"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>