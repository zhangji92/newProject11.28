<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.yoka.mrskin.util.RoundImage
        android:id="@+id/search_experience_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/search_experience_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text16"
        android:layout_toRightOf="@+id/search_experience_image"/>

    <TextView
        android:id="@+id/search_experience_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#A1A5A7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/search_experience_image"
        android:layout_below="@+id/search_experience_title"/>
    
    <TextView
        android:id="@+id/search_experience_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:gravity="left"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/search_experience_image"
        android:layout_below="@+id/search_experience_desc"/>

</RelativeLayout>