<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/card_layoutone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/left19"
            android:layout_marginTop="@dimen/top14"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/card_title" />

        <TextView
            android:id="@+id/card_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/card_title"
            android:layout_below="@+id/card_title"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/top14"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/home_window_subtitle"
            android:textSize="@dimen/card_subtitle" />

        <!--
             <ImageView
            android:id="@+id/card_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/right16"
            android:layout_marginTop="@dimen/top12" />
        -->
    </RelativeLayout>

</RelativeLayout>