<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/search_detalis_lv_test_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/search_detalis_lv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/search_detalis_lv_title"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/search_detalis_lv_image"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/search_detalis_lv_title"
            android:layout_below="@+id/search_detalis_lv_title"
            android:layout_marginLeft="22dp"
            android:src="@drawable/ic_launcher"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/search_detalis_lv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/search_detalis_lv_image"
            android:layout_marginRight="22dp" />

        <LinearLayout
            android:id="@+id/search_detalis_lv_gran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/search_detalis_lv_image"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_launcher"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:src="@drawable/ic_launcher"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:src="@drawable/ic_launcher"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:src="@drawable/ic_launcher" 
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:src="@drawable/ic_launcher" 
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star_6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:src="@drawable/ic_launcher" 
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:id="@+id/search_detalis_lv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_detalis_lv_image"
            android:layout_alignLeft="@+id/search_detalis_lv_remark"
            android:layout_marginBottom="26dp" />

        <TextView
            android:id="@+id/search_detalis_lv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_detalis_lv_image"
            android:layout_alignLeft="@+id/search_detalis_lv_remark" />
    </RelativeLayout>

</LinearLayout>