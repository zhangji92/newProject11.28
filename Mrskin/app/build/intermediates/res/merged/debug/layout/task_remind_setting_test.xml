<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setting_task_tearlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/plan_detalis_view"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/task_setting_yeartime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="2015年6月10日"
            android:textColor="@color/home_title"
            android:textSize="@dimen/text14" />

        <TextView
            android:id="@+id/task_remind_setting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="时间"
            android:textColor="@color/home_title"
            android:textSize="@dimen/text14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:minHeight="30dp"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/task_remind_setting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="标题"
            android:lineSpacingExtra="44px"
            android:textColor="@color/text_my_experience_tab_default" 
            android:textSize="@dimen/text14" />
    </RelativeLayout>

</LinearLayout>