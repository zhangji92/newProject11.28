<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#dedede" />
-

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >
-

        <RelativeLayout
            android:id="@+id/probation_item_image_layout"
            android:layout_width="90dp"
            android:layout_height="90dp" >

            <ImageView
                android:id="@+id/probation_item_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/probation_item_image_tag"
                android:layout_width="35dp"
                android:layout_height="18dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/mytrial_new" />
        </RelativeLayout>
-

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/probation_item_image_layout" >

            <TextView
                android:id="@+id/probation_item_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="@dimen/text14" />

            <TextView
                android:id="@+id/probation_item_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/probation_item_state_text"
                android:textColor="#000000"
                android:textSize="@dimen/text16" />
        </RelativeLayout>
-

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/probation_item_image_layout" >

            <TextView
                android:id="@+id/probation_item_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="@dimen/text12" />
-

            <RelativeLayout
                android:id="@+id/probation_item_tag_layout"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="#F06251" >

                <TextView
                    android:id="@+id/probation_item_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text14" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>