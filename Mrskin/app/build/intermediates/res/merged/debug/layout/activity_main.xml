<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <FrameLayout
        android:id="@+id/main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom_layout"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/main_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_shape_rec"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- 精选 -->

        <LinearLayout
            android:id="@+id/bottom_home_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bottom_home"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_home_selector"
                android:contentDescription="@null" />
        </LinearLayout>

        <!-- 心得 -->

        <LinearLayout
            android:id="@+id/bottom_experience_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bottom_experience"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_exper_selector"
                android:contentDescription="@null" />
        </LinearLayout>
        <!-- 妆品库 -->

        <LinearLayout
            android:id="@+id/bottom_productlibrary_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bottom_productlibrary"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_search_selector"
                android:contentDescription="@null" />
        </LinearLayout>
        <!-- 免费试用 -->

        <LinearLayout
            android:id="@+id/bottom_task_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bottom_task"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@drawable/tab_task_seletor"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />
        </LinearLayout>
        <!-- 我的页面 -->

        <LinearLayout
            android:id="@+id/bottom_me_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/me_task"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_me_selector"
                android:contentDescription="@null" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>