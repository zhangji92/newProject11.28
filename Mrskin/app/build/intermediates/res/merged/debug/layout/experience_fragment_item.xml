<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/bule"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/experience_fragment_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="FEB 24,2016 Web" />

        <TextView
            android:id="@+id/experience_fragment_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="开始做自己就开始美丽，——————From coooo" />
    </LinearLayout>
    <!-- 头条 -->

    <LinearLayout
        android:id="@+id/experience_fragment_toutiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView />
    </LinearLayout>

    

</LinearLayout>