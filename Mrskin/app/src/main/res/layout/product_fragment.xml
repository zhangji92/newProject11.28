    <!-- GridView header -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eeeeee" >

        <TextView
            android:id="@+id/serach_and_searchlayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/product_slidingimage"
            android:background="@drawable/home_searchbox"
            android:gravity="center_vertical"
            android:hint="@string/serach_rack"
            android:maxLines="1"
            android:paddingLeft="40dp" />

        <TextView
            android:id="@+id/search_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/serach_and_searchlayout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_searchbox_btn" />

        <RelativeLayout
            android:id="@+id/product_slidingimage_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center" >
        </RelativeLayout>

        <TextView
            android:id="@+id/product_slidingimage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_add_experience"
            android:contentDescription="@null" />
    </RelativeLayout>

    <!-- <View
