<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_my_experience_list"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <com.yoka.mrskin.util.RoundImage
            android:id="@+id/myExperienceHeadImageView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/myExperienceNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text12" />

        <TextView
            android:id="@+id/myExperienceSkinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/location_city_gps"
            android:textSize="@dimen/text12" />

        <TextView
            android:id="@+id/myExperienceAgeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           
            android:paddingLeft="2dp"
            android:textColor="@color/location_city_gps"
            android:textSize="@dimen/text12" />

        <TextView
            android:id="@+id/myExperienceHeadTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/location_city_gps"
            android:textSize="@dimen/text12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/myExperienceImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/myExperienceTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="@dimen/text14" />

            <TextView
                android:id="@+id/myExperienceConentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="@color/text_my_experience_tab_default"
                android:textSize="@dimen/text12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>