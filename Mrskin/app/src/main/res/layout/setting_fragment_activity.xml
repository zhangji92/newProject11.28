<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/location_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/task_info_setting"
            android:textColor="@color/black"
            android:textSize="@dimen/text18" />

        <LinearLayout
            android:id="@+id/settingactivity_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/location_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/blck_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/location_back"
                android:textColor="@color/location_city_gps"
                android:textSize="@dimen/text12" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/thin_split_line" />
    <!-- 提醒测试 -->

    <RelativeLayout
        android:id="@+id/activity_setting_layout_remind"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/setting_remind_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:src="@drawable/remind_icon" />

        <TextView
            style="@style/fragment_setting_text_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/setting_remind_img"
            android:text="@string/setting_remind"
            android:textColor="@color/setting_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/about_more_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/thin_split_line" />
    <!-- 版本更新 -->

    <RelativeLayout
        android:id="@+id/activity_setting_layout_check"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/setting_check_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:src="@drawable/versions_icon" />

        <TextView
            android:id="@+id/textView1"
            style="@style/fragment_setting_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/setting_check_img"
            android:text="@string/setting_update"
            android:textColor="@color/setting_text" />

        <TextView
            android:id="@+id/setting_current_version"
            style="@style/fragment_setting_gray_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/setting_version_new"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:text="@string/setting_version_code" />

        <TextView
            android:id="@+id/setting_version_new"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/about_vbg"
            android:contentDescription="@null"
            android:gravity="center"
            android:text="@string/setting_new"
            android:textColor="@color/white"
            android:textSize="@dimen/textnew"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/version_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/thin_split_line" />
    <!-- 意见反馈 -->

    <RelativeLayout
        android:id="@+id/activity_setting_layout_advice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/setting_advice_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/opinion_icon"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/setting_tv_advice"
            style="@style/fragment_setting_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/setting_advice_img"
            android:text="@string/setting_advice"
            android:textColor="@color/setting_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/about_more_icon" />
    </RelativeLayout>

    <View
        android:id="@+id/advice_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/thin_split_line" />

    <!-- 关于我们 -->

    <RelativeLayout
        android:id="@+id/activity_setting_layout_aboutus"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/setting_about_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:src="@drawable/about_about" />

        <TextView
            style="@style/fragment_setting_text_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/setting_about_img"
            android:text="@string/about_about"
            android:textColor="@color/setting_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/about_more_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/right_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/quit_login"
        android:textColor="@color/location_title"
        android:textSize="@dimen/location_location" />

</LinearLayout>