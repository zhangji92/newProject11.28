<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <com.yoka.mrskin.util.RoundImage
        android:id="@+id/search_info_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/search_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text17"
        android:layout_toRightOf="@+id/search_info_image"/>

    <TextView
        android:id="@+id/search_info_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayto"
        android:gravity="left"
        android:textSize="@dimen/text17"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/search_info_image"
        android:layout_below="@+id/search_info_title"/>

</RelativeLayout>