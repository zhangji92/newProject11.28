<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/product_detalis_composition_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/composition_title" />

    <TextView
        android:id="@+id/product_detalis_composition_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/product_detalis_composition_name"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/product_detalis_composition_nameimage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/product_detalis_composition_name"
        android:layout_marginRight="25dp"
        tools:ignore="ContentDescription" />

</RelativeLayout>