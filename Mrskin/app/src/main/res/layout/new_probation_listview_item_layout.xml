<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_grass_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <com.yoka.mrskin.model.image.YKMultiMediaView
            android:id="@+id/probation_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />
        
        <RelativeLayout
            android:id="@+id/probation_item_tag_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" >
            
            <TextView
                android:id="@+id/probation_item_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_my_experience_tab_default"
                android:textSize="@dimen/text10"
                android:gravity="center"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/probation_item_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/probation_item_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_toLeftOf="@id/probation_item_tag_layout"
            android:textColor="@color/black"
            android:textSize="@dimen/text16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/probation_item_image"
            android:paddingBottom="15dp" >

            <TextView
                android:id="@+id/probation_item_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_my_experience_tab_default"
                android:textSize="@dimen/text10" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>