<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:gravity="center" >

        <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <!-- 背景引导框 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_skin_test_bg_1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <RelativeLayout
            android:id="@+id/skin_test_cancel_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/skin_test_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/skin_test_cancel"
                android:textColor="#ffffff"
                android:textSize="@dimen/text16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/skin_test_check_course_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/skin_test_check_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/skin_test_check_course"
                android:textColor="#ffffff"
                android:textSize="@dimen/text16" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp" >

        <TextView
            android:id="@+id/skin_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/skin_test_text1"
            android:textColor="#ffffff"
            android:textSize="@dimen/text18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skin_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/skin_test_text2"
            android:textColor="#ffffff"
            android:textSize="@dimen/text16" />
    </RelativeLayout>

</RelativeLayout>