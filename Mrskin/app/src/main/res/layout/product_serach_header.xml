<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_title" >

        <TextView
            android:id="@+id/serach_and_searchlayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/home_searchbox"
            android:gravity="center_vertical"
            android:hint="@string/serach_rack"
            android:maxLines="1"
            android:paddingLeft="40dp"/>

        <!--
             <TextView
            android:id="@+id/search_cancle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/ic_launcher" />
        -->

        <TextView
            android:id="@+id/search_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/serach_and_searchlayout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_searchbox_btn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/product_linear_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_title"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_view_one"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/image_view_two"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/image_view_three"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_linear_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_title"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/image_view_four"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/image_view_five"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/image_view_six"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter" />
        
    </LinearLayout>

</LinearLayout>