<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/comment_adapter_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:riv_border_color="@color/first_text"
        app:riv_border_width="2dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/comment_adapter_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/comment_adapter_img" />

    <TextView
        android:id="@+id/comment_adapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/comment_adapter_user" />

    <TextView
        android:id="@+id/comment_adapter_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_adapter_img"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/comment_adapter_img" />

    <TextView
        android:id="@+id/comment_adapter_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/comment_adapter_content"
        android:layout_marginEnd="30dp"
        android:text="回复" />


</RelativeLayout>