<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pre_img"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/logo"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_marginStart="5dp"
        android:id="@+id/pre_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pre_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pre_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/pre_relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pre_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/logo" />

            <TextView
                android:id="@+id/pre_fracture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/pre_money" />

        </RelativeLayout>

        <TextView
            android:id="@+id/pre_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />

        <RelativeLayout
            android:id="@+id/pre_relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pre_address"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/pre_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/pre_address"
                android:contentDescription="@string/logo"
                android:src="@mipmap/location" />

            <TextView
                android:id="@+id/pre_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/pre_location"
                android:ellipsize="end"
                android:maxLines="1" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>