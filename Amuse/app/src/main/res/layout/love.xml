<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/place_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_text"
    android:orientation="vertical">

    <ImageView
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:id="@+id/love_image"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:contentDescription="@string/logo"/>

    <LinearLayout
        android:id="@+id/love_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/love_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/love_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo"
            android:textColor="@color/txt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/love_sigle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo"
            android:textColor="@color/txt" />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/love_address"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/love_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/love_address"
                android:contentDescription="@string/logo"
                android:src="@mipmap/location" />

            <TextView
                android:id="@+id/love_location_data"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/love_location"
                android:ellipsize="end"
                android:maxLines="1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/love_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />

    </LinearLayout>
</RelativeLayout>